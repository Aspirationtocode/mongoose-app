.message
	display flex
	max-width 90%
	min-width 200px
	margin-bottom 16px
	flex-shrink 0

	&--current-user
		align-self flex-end
		flex-direction row-reverse
		align-items flex-end

		.message-content
			margin-left 0
			margin-right 7px
			border-radius 4px
			border-bottom-right-radius 0
			background-color #e4e4e4

			&:before
				position absolute
				bottom 0
				right -13px
				content ""
				triangle(13px, 13px, 'bottomLeft', #e4e4e4)
				z-index 100


			&:after
				width 12px
				height 2px
				background transparent
				border-width 0
				top calc(100% - 2px)
				left 100%
				box-shadow 0 3px 6px alpha(#000, .16)

			&__date
				font-size 13px
				color #95989A

.message-content
	position relative
	background-color #fff
	padding 10px
	font-size 15px
	box-shadow 0 3px 6px alpha(#000, .16)
	margin-left 7px
	border-radius 4px
	border-top-left-radius 0
	line-height 1.2

	&__text
		color alpha($mainDarkColor, .8)
		margin-bottom 5px

	&__date
		font-size 13px
		color #95989A

	&:after
		position absolute
		top 0
		left -13px
		content ""
		triangle(13px, 13px, 'topRight', #fff)
		z-index 100
